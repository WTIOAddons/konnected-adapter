{
  "author": "wfahle",
  "description": "Konnected addon for WebThings Gateway",
  "gateway_specific_settings": {
    "webthings": {
      "exec": "python3 {path}/main.py",
      "primary_type": "adapter",
      "strict_max_version": "*",
      "strict_min_version": "0.10.0"
    }
  },
  "homepage_url": "https://github.com/WTIOAddons/konnected-adapter",
  "id": "konnected-adapter",
  "license": "MPL-2.0",
  "manifest_version": 1,
  "name": "Konnected Adapter",
  "options": {
    "default": {
      "log_level": "WARNING",
      "endpoint":"wlan0"
    },
    "schema": {
      "description": "Configuration for konnected adapter",
      "properties": {
        "log_level": {
          "description": "Log level. Use WARNING as standard",
          "enum": [
            "WARNING",
            "INFO",
            "DEBUG"
          ],
          "type": "string"
        },
        "endpoint": {
          "description": "Interface on rpi that konnected will notify (wlan0)",
          "type": "string"
        },
        "devices": {
            "items": {
                "description": "A Konnected device",
                "properties": {
                    "serial": {
                        "description":"Serial number",
                        "type":"integer"
                    },
                    "kind": {
                        "description":"Kind of device",
                        "type":"string",
                        "enum": [
                            "AlarmPanelV2",
                            "AlarmPanelV1"
                        ]
                    },
                    "zones": {
                        "items": {
                            "required": [
                                "zonename",
                                "sensortype",
                                "zone"
                            ],
                            "properties": {
                                "zonename": {
                                    "type": "string"
                                },
                                "sensortype": {
                                    "type": "string",
                                    "enum": [
                                        "door",
                                        "motion",
                                        "dht",
                                        "ds18b20"
                                    ]
                                },
                                "zone": {
                                    "type": "string",
                                    "enum": [
                                        "1","2","3","4","5","6"
                                    ]
                                }
                            },
                            "description": "Zone",
                            "type": "object"
                        },
                        "description": "List of zones",
                        "type": "array"
                    }
                },
                "required":[
                    "serial",
                    "kind"
                ],
                "type": "object"
            },
            "title": "List of devices",
            "type": "array"
        }
      },
      "required": [
          "endpoint"
      ],
      "type": "object"
    }
  },
  "short_name": "Konnected",
  "version": "0.0.3"
}
